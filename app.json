{
  "expo": {
    "name": "FocusFlow",
    "slug": "focusflow",
    "version": "2.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "dark",
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.focusflow.app"
    },
    "android": {
      "package": "com.focusflow.app",
      "permissions": [
        "NOTIFICATIONS",
        "VIBRATE"
      ]
    },
    "notification": {
      "color": "#3b82f6"
    }
  }
}
